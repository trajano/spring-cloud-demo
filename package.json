{
  "name": "@trajano/spring-docker-root",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/eslint-config",
    "packages/react-hooks",
    "packages/auth-context"
  ],
  "scripts": {
    "postinstall": "husky install || true"
  },
  "lint-staged": {
    "*.json": "prettier --write"
  },
  "overrides": {
    "@babel/core": "7.20.2",
    "babel-loader": "^8.3.0",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-native": "0.70.5",
    "react-test-renderer": "18.1.0"
  },
  "resolutions": {
    "@babel/core": "^7.20.2",
    "babel-loader": "^8.3.0",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-native": "0.70.5",
    "react-test-renderer": "18.1.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.4.3",
    "commitlint": "^17.4.3",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "prettier-plugin-packagejson": "^2.4.3"
  },
  "yarn-workspaces": {
    "packages": [
      "packages/eslint-config",
      "packages/react-navigation-header-buttons",
      "packages/react-hooks",
      "packages/*",
      "expo-app"
    ],
    "nohoist": [
      "**/babel*",
      "**/eslint",
      "**/@typescript-eslint/*",
      "**/eslint-*",
      "**/jest*",
      "**/prettier",
      "**/prettier-plugin-*",
      "**/webpack*",
      "**/typescript",
      "typescript",
      "**/type-graphql*",
      "react-navigation-header-buttons/react-native",
      "**/typescript"
    ]
  }
}
