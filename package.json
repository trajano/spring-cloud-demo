{
  "name": "@trajano/spring-docker-root",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/eslint-config",
      "packages/react-hooks",
      "packages/*",
      "expo-app"
    ],
    "nohoist": [
      "*/eslint-config",
      "**/babel*",
      "**/eslint",
      "**/eslint-*",
      "**/jest*",
      "**/prettier",
      "**/prettier-plugin-*",
      "**/webpack*",
      "**/type-graphql*"
    ]
  },
  "scripts": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.json": "prettier --write"
  },
  "resolutions": {
    "@babel/core": "^7.20.2",
    "babel-loader": "^8.3.0",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-native": "0.70.5",
    "react-test-renderer": "18.1.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.4.2",
    "commitlint": "^17.4.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "prettier-plugin-packagejson": "^2.4.0"
  }
}
